<style>
  .collection-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 16px;
  }
  .collection-product-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    padding: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: box-shadow 0.2s;
  }
  .collection-product-card:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
  }
  .collection-product-image {
    width: 100%;
    max-width: 220px;
    height: 220px;
    object-fit: contain;
    border-radius: 6px;
    margin-bottom: 16px;
    background: #f8f8f8;
  }
  .collection-product-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 8px;
    text-align: center;
  }
  .collection-product-price {
    color: var(--button-color);
    font-weight: 500;
    margin-bottom: 16px;
  }
  .collection-product-link {
    text-decoration: none;
    color: #fff;
    background: var(--button-color);
    padding: 10px 24px;
    border-radius: 5px;
    font-weight: 500;
    transition: background 0.2s;
  }
</style>
<h1 class="text-3xl font-bold text-center mb-10">{{ collection.title }}</h1>

<div class="collection-grid">
  {% for product in collection.products %}
    <div class="collection-product-card">
      <img
        class="collection-product-image"
        src="{{ product.featured_image | image_url: width: 400 }}"
        alt="{{ product.title }}" width="200" height="200"
      >
      <div class="collection-product-title">{{ product.title }}</div>
      <div class="collection-product-price">{{ product.price | money }}</div>
      <a class="collection-product-link" href="{{ product.url }}">View Product</a>
    </div>
  {% endfor %}
</div>
